{
  "name": "mcp-gateway",
  "version": "1.3.0",
  "description": "A local MCP router that aggregates multiple MCPs into a single interface for Claude",
  "private": false,
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "mcp-gateway": "dist/cli.js"
  },
  "files": [
    "dist/",
    "super-mcp-config.example.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run build",
    "remote:router": "npx github:sting8k/mcp-gateway"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "router",
    "aggregator",
    "tools",
    "productivity"
  ],
  "author": "Joshua WÃ¶hle <joshua@mindstone.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoshuaWohle/Super-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/JoshuaWohle/Super-MCP/issues"
  },
  "homepage": "https://github.com/JoshuaWohle/Super-MCP#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/express": "^5.0.3",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "express": "^5.1.0",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.0"
  }
}
